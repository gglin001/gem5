{
    "clangd.arguments": [
        // "-log=verbose",
        "-pretty",
        "--background-index",
        "--enable-config",
        "--all-scopes-completion",
        "--compile-commands-dir=${workspaceFolder}/build/ALL",
        // "--compile-commands-dir=${workspaceFolder}/build/RISCV",
    ],
    "terminal.integrated.env.linux": {
        // "EXT_PATH": "${workspaceFolder}/build/RISCV",
        "EXT_PATH": "${workspaceFolder}/build/ALL",
        "EXT_PYTHONPATH": "${workspaceFolder}/src/python",
    },
    "python.analysis.extraPaths": [
        "${workspaceFolder}/src/python"
    ],
    "files.watcherExclude": {
        "**/build/**": true,
    },
    "ruff.lint.enable": false,
}
